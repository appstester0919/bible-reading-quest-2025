    "filesystem": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-filesystem", "D:\\AI\\RovoDev"],
      "description": "File system access for your RovoDev projects"
    },
    "git": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-git"],
      "description": "Git version control operations"
